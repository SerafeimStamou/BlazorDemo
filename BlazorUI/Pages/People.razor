@page "/people"
@inherits PeopleBase 


@if (people is null)
{
   <div class="loader"></div>
}
else
{
        @foreach (var person in people)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@person.FirstName</td>
                        <td>@person.LastName</td>
                    </tr>
                </tbody>
            </table>
        }
}

