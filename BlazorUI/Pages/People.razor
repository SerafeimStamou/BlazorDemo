@page "/people"
@inherits PeopleBase

@if (People.Count == 0 )
{
    <div class="loader"></div>
}
else
{
<table class="table table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in People)
        {

            <tr>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
            </tr>

        }
    </tbody>
</table>
}

@if (Message is not null)
{
    <h1>@Message</h1>
}

